// Place your settings in this file to overwrite the default settings
{
    "editor.fontFamily": "Roboto Mono",
    "editor.fontSize": 15,
    "editor.insertSpaces": false,
    "editor.renderLineHighlight": "gutter",
    "editor.renderWhitespace": "boundary",
    "editor.selectionHighlight": true,
    "editor.wrappingColumn": 0,
    "editor.wrappingIndent": "indent",

    "files.associations": {
        "*.cmp": "apex"
    },

    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/*.pyc": true,
        "**/*.pyo": true,
        "**/*.exe": true,
        "**/*.dll": true,
        "**/*.obj": true,
        "**/*.o": true,
        "**/*.a": true,
        "**/*.lib": true,
        "**/*.so": true,
        "**/*.dylib": true,
        "**/*.ncb": true,
        "**/*.sdf": true,
        "**/*.suo": true,
        "**/*.pdb": true,
        "**/*.idb": true,
        "**/*.class": true,
        "**/*.psd": true,
        "**/*.db": true,
        "**/*.sublime-workspace": true
    },
    "files.insertFinalNewline": true,

    "markdown.styles": ["file:///Users/kyao/Documents/Misc/My-OSX-Config/vscode/github-markdown.css"],

    "search.exclude": {
        "**/node_modules": true,
        "**/dist": true
    },

    "eslint.enable": true,
    "window.showFullPath": true,
    "workbench.statusBar.visible": true,
    "window.zoomLevel": 0
}
